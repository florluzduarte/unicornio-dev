---
import { Icon } from "astro-icon";
import FormNewsletter from "./FormNewsletter.astro";

const newsletterDescription =
  "Si estás aprendiendo a programar muy pronto vas a encontrar por acá:";

const newsletterGifts = [
  {
    icon: "ri:cursor-fill",
    size: 24,
    title: "Recursos",
    alt: "Emoji de lamparita",
  },
  {
    icon: "ri:code-box-fill",
    size: 24,
    title: "Desafíos",
    alt: "Emoji de tiro al blanco",
  },
  {
    icon: "ri:terminal-window-fill",
    size: 24,
    title: "Tutoriales",
    alt: "Emoji herramientas de construcción",
  },
  {
    icon: "ri:lightbulb-flash-fill",
    size: 24,
    title: "Tips",
    alt: "Emoji regalo",
  },
];
---

<section>
  <div class="newsletter--container drac-box drac-bg-animated drac-rounded-xl">
    <div class="newsletter--offer-container">
      <h2 class="drac-heading drac-heading-xl drac-text-black">
        Se vienen cosas muy interesantes
      </h2>
      <p class="drac-text drac-text-black">{newsletterDescription}</p>
      <ul>
        {
          newsletterGifts.map((gift) => (
            <li class="newsletter--gifts drac-text drac-text-black">
              <Icon
                name={gift.icon}
                width={gift.size}
                height={gift.size}
                alt={gift.alt}
              />
              <p>{gift.title}</p>
            </li>
          ))
        }
      </ul>
    </div>
    <FormNewsletter />
  </div>
</section>

<!-- Styles -->

<style>
  .newsletter--gifts {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0.5rem 0 0.5rem 1rem;
    gap: 0.5rem;
  }

  .newsletter--container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 3rem 1.5rem;
    padding: 2rem 1rem;
  }

  .newsletter--offer-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  @media screen and (min-width: 1360px) {
    .newsletter--container {
      flex-direction: row;
      max-width: 1100px;
      width: 100%;
      margin: 4rem auto;
      padding: 3rem 6rem;
      justify-content: space-between;
      align-items: center;
    }

    .newsletter--offer-container {
      max-width: 380px;
      gap: 1rem;
    }
  }

  @media screen and (min-width: 765px) and (max-width: 1359px) {
    .newsletter--container {
      flex-direction: row;
      max-width: 700px;
      margin: 4rem auto;
      padding: 2rem;
      justify-content: space-between;
    }

    .newsletter--offer-container {
      max-width: 280px;
    }
  }
</style>
