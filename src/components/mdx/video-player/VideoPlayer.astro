---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div>
  <iframe
    class="aspect-video w-full"
    src={"https://www.youtube.com/embed/" + id}
    title="YouTube Video Player"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
  ></iframe>
</div>
