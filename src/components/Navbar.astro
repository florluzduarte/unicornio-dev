---
import { Icon } from "astro-icon";
---

<nav class="navbar">
  <div class="navbar--container">
    <Icon name="Logo" width={150} class="logo" />
  </div>
</nav>

<style>
  .navbar--container {
    background-color: var(--black);
    display: flex;
    justify-content: center;
    height: 4rem;
    border-bottom: 5px solid var(--bkg-dracula);
  }

  @media (min-width: 1360px) {
    .navbar--container {
      height: 5rem;
    }
    .logo {
      width: 190px;
    }
  }
</style>
