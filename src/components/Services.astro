---
import { Icon } from "astro-icon";

export interface Props {
  icon: string;
  alt: string;
  size: number;
  title: string;
  content: string;
}

const { icon, alt, size, title, content } = Astro.props;
---

<div class="service--item">
  <div
    class="service--icon-container drac-box drac-bg-yellow-pink drac-d-inline-bloc"
  >
    <Icon
      name={icon}
      alt={alt}
      width={size}
      height={size}
      class="drac-text-black"
    />
  </div>
  <h2 class="drac-heading drac-heading-lg drac-text-purple">
    {title}
  </h2>
  <p class="drac-text drac-text-white">{content}</p>
</div>

<!-- Styles -->

<style>
  .service--icon-container {
    border-radius: 50%;
    padding: 0.85rem;
    width: 52px;
    height: 52px;
  }

  .service--item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
