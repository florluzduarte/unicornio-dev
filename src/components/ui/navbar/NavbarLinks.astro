---
import { useTranslations } from "@translate/utils/i18n-utils";
import type { Lang } from "@translate/dictionary";
import NavbarItem from "./NavbarItem.astro";

const lang = Astro.currentLocale as Lang;
const t = useTranslations(lang);
---

<ul class="flex justify-between py-4 m-3">
  <NavbarItem lang={lang} subpath="">
    {t("nav.home")}
  </NavbarItem>

  <NavbarItem lang={lang} subpath="blog/">
    {t("nav.blog")}
  </NavbarItem>

  <NavbarItem lang={lang} subpath="resources/">
    {t("nav.resources")}
  </NavbarItem>

  <NavbarItem lang={lang} subpath="about/">
    {t("nav.about")}
  </NavbarItem>
</ul>
