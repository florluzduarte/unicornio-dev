---
import type { FontType } from "@type/ui-types";

interface Props {
  text: string;
  fontType?: FontType;
  color?: string;
}

const { text, fontType = "bold", color = "text-pink" } = Astro.props;
---

<h1
  class={`font-sans text-[40px] ${color} ${fontType === "bold" ? "font-bold" : "font-normal"} lg:text-[64px]`}
>
  {text}
</h1>
