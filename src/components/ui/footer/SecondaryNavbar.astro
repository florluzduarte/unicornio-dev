---
import type { Lang } from "@translate/dictionary";
import { useTranslations } from "@translate/utils/i18n-utils";
import { footerLinksData } from "./footerLinksData";
import NavbarItem from "../navbar/NavbarItem.astro";

const lang = Astro.currentLocale as Lang;
const t = useTranslations(lang);
---

<nav aria-labelledby="secondary-menu" class="my-4">
  <h2 id="secondary-menu" class="sr-only">{t("footer.nav.aria")}</h2>
  <ul
    class="grid grid-cols-2 py-3 px-3 gap-4 md:grid-cols-3 lg:grid-cols-5 lg:gap-6"
  >
    {
      footerLinksData.map((item) => (
        <NavbarItem lang={lang} subpath={item.subpath}>
          {t(item.translationKey)}
        </NavbarItem>
      ))
    }
  </ul>
</nav>
