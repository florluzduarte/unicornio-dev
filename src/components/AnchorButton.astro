---
export interface Props {
  anchorLink: string;
  anchorText: string;
  btnBgColor: string;
  btnTypeColor: string;
}

const { anchorLink, anchorText, btnBgColor, btnTypeColor } = Astro.props;
---

<a
  href={anchorLink}
  class={`anchor drac-btn drac-bg-${btnBgColor} drac-text-${btnTypeColor}`}
  target="_blank"
  title={anchorText}
  aria-label={anchorText}
  aria-describedby={anchorText}>{anchorText}</a
>

<style>
  .anchor {
    margin-top: 1rem;
  }
</style>
